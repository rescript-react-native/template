{
  "name": "@reason-react-native/template",
  "version": "0.61.1",
  "publishConfig": {
    "access": "public"
  },
  "repository": "https://github.com/reason-react-native/template",
  "license": "MIT",
  "keywords": [
    "reason",
    "reasonml",
    "bucklescript",
    "react-native",
    "react-native-template"
  ],
  "files": [
    "*",
    "!.DS_Store",
    "!template/**/*.bs.js",
    "!template/.merlin",
    "!template/android/app/build",
    "!template/ios/build",
    "!template/ios/Pods",
    "!template/lib/bs",
    "!template/lib/ocaml"
  ],
  "devDependencies": {
    "bs-platform": "^8.0.0",
    "husky": "^4.0.0",
    "lint-staged": "^10.0.0",
    "npmpub": "^5.0.0",
    "prettier": "^2.0.0"
  },
  "scripts": {
    "prepare": "cd template && yarn",
    "test": "cd template && yarn re:build && yarn test",
    "format:most": "prettier --write \"**/*.{md,json,js,css}\"",
    "format:re": "find . -name \"*.re\" -or -name \"*.rei\" | grep -v \"node_modules\" | xargs bsrefmt --in-place",
    "format": "yarn format:most && yarn format:re",
    "release": "npmpub"
  },
  "prettier": {
    "trailingComma": "all"
  },
  "lint-staged": {
    "*.{md,json,js,css}": [
      "prettier --write"
    ],
    "*.{re,rei}": [
      "bsrefmt --in-place"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
